<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //ActivityDialog
    <style name="CustomActivityDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowBackground">@color/gray_transparent</item>-->

        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否有标题栏-->
        <item name="android:windowNoTitle">true</item>
        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--<item name="android:windowCloseOnTouchOutside">false</item>&lt;!&ndash; activity点击空白部分不消失 &ndash;&gt;-->
        <!--背景是否模糊显示-->
        <!--<item name="android:backgroundDimEnabled">true</item>-->
        <!--是否浮现在activity之上-->
        <!--<item name="android:windowIsFloating">true</item>-->
        <!--设置窗口内容不覆盖-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

</resources>
